<style>
	.focusImage{
		box-shadow: 1px 1px 4px 1px #888888;
		-webkit-box-shadow: 1px 1px 4px 1px #888888;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-offset-4 col-sm-4" ng-show = '!book'>
			<div class="form-group">
				<label for="bookname">書名</label>
				<input id="bookname" ng-model="newbook.name" class="form-control" type="text">	
			</div>
			<div class="form-group">
				<label for="bookauthor">作者</label>
				<input id="bookauthor" ng-model="newbook.author" class="form-control" type="text">	
			</div>
			<div class="form-group">
				<button ng-click="createBook()" class='btn btn-primary form-control'>新增</button>	
			</div>	
		</div>
		
		
	</div>
	<div class="row">
		<div>書名：{{book.name}}</div>
		<div>作者：{{book.author}}</div>
	</div>
	<div ng-show ='book'>
		<div class="row form-group form-inline">
			<button class="btn btn-primary form-control" ng-file-select='onFileSelect()' accept=".jpg,.png,.gif" ng-multiple="true" ng-model="files">選擇圖片</button>
			<button class="btn btn-primary form-control" ng-click="upload(allfiles)">完成送出</button>
		</div>


		<div class="col-sm-2" ng-repeat="file in allfiles" ng-click="focusImage($index)" ng-class="{'focusImage': focus == $index }">
			<img style="width:100%; height:200px;" src="{{file.src}}" alt="">
		</div>	
	</div>
	
</div>